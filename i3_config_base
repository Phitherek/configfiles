# window rules

for_window [class="Pavucontrol"] floating enable
for_window [class="Psi-plus"] floating enable
for_window [class="Fceux"] floating enable

# i3lock config

set $Locker i3lock-blur && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"

# bindsyms

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec pulseaudio_volume up #increase sound volume
bindsym XF86AudioLowerVolume exec pulseaudio_volume down #decrease sound volume
bindsym XF86AudioMute exec pulseaudio_volume mute # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Touchpad controls
bindsym XF86TouchpadToggle exec /home/phitherek/bash/toggletouchpad.sh # toggle touchpad

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Screen blanking controls
bindsym $mod+Shift+b exec scrblank default
bindsym $mod+b exec scrblank off

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command conky-i3bar
	tray_output eDP1
}
