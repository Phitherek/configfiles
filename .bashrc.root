# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
PS1='\[\e[0;31m\]\u\[\e[0;33m\]@\[\e[0;32m\]\h\[\e[0;37m\]:\[\e[1;33m\]($(git rev-parse --abbrev-ref HEAD 2>>/dev/null))\[\e[0;37m\]:\[\e[1;35m\]($(rvm current)) \[\e[0;36m\]\W \[\e[0;31m\]#\[\e[1;37m\] '

#source "/etc/profile.d/rvm.sh"
